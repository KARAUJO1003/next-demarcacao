generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id          String     @id @default(uuid())
  email       String     @unique
  password    String
  name        String
  createdAt   DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  agendamento Bookings[]
}

model Bookings {
  id                    String  @id @default(uuid())
  empresa               String
  cliente               String
  cpf_cnpj              String?
  quadra                String
  lote                  String
  status_da_venda       String  @default("Ativa")
  benfeitoria           String?
  dt_agendamento        String
  horario_do_agen       String
  resp_pelo_agendamento String
  demarcador            String
  status                String
  obs                   String?
  idBookings            String?
  author                User?   @relation(fields: [idBookings], references: [id])
}
